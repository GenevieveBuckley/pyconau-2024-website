---
import logoImg from "../imgs/Logo_Standard.svg"
export type Props = {
  navClass?: string
  logo?: boolean
}
const { navClass, logo } = Object.assign(
  {},
  { logo: true },
  Astro.props as Props,
)
---

<nav class={navClass}>
  {
    logo && (
      <a id="nav-logo" href="/">
        <img src={logoImg} />
      </a>
    )
  }
  <ul>
    <li><a href="/about">About</a></li>
    <li><a href="/sponsor">Sponsor</a></li>
    <li><a href="/pycon-au-2024/schedule">Program</a></li>
    <li><a href="/attend">Attend</a></li>
    <li><a href="/safety">Safety</a></li>
  </ul>
  <div class="dates">    
    22&ndash;26 November 2024&emsp;&bull;&emsp;<span class="location"
      >Melbourne Convention and Exhibition Centre</span>
  </div>
</nav>
